# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/openelevate
MONGODB_URI_PRODUCTION=mongodb+srv://username:password@cluster.mongodb.net/openelevate

# JWT Settings
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=90d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@openelevate.com

# AI Service API Keys
TOGETHER_AI_API_KEY=your_together_ai_key_here
OPENROUTER_API_KEY=your_openrouter_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
